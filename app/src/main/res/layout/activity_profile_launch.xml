<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".ProfileLaunch">

    <TextView
        android:id="@+id/profiletitle"
        android:layout_width="363dp"
        android:layout_height="46dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/audiowide"
        android:text="Create Your Profile!"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/featurelist" />

    <TextView
        android:id="@+id/profileexplanation"
        android:layout_width="360dp"
        android:layout_height="114dp"
        android:fontFamily="@font/audiowide"
        android:text="Here's the Basic Features:"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="40sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

    <TextView
        android:id="@+id/featurelist"
        android:layout_width="363dp"
        android:layout_height="172dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_mono"
        android:text="> Gamified Assignments and Ranking System \n> Custom Generated Flashcards and Tests \n> One Stop Shop for all your Academic Needs!"
        android:textAlignment="viewStart"
        android:textColor="@color/secondary_color"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileexplanation" />

    <EditText
        android:id="@+id/profilenamefield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:fontFamily="@font/audiowide"
        android:hint="Name"
        android:inputType="text"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textColorLink="@color/secondary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profiletitle" />

    <EditText
        android:id="@+id/profileusernamefield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/audiowide"
        android:hint="Username"
        android:inputType="text"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textColorLink="@color/secondary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilenamefield" />

    <EditText
        android:id="@+id/profileemailfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/audiowide"
        android:hint="Email"
        android:inputType="text"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/secondary_color"
        android:textColorHint="@color/secondary_color"
        android:textColorLink="@color/secondary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileusernamefield" />

    <Button
        android:id="@+id/proceedtopreferences"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/accent_color"
        android:fontFamily="@font/roboto_mono"
        android:radius="10dp"
        android:text="Next"
        android:textColor="@color/secondary_color"
        android:textSize="24sp"
        app:circularflow_radiusInDP="100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileemailfield" />

</androidx.constraintlayout.widget.ConstraintLayout>